#include <stdio.h>
int main()
{
      int a,b,c;
      float _X;
      printf("Enter First Number  : ");
      scanf("%d", &a);
      printf("Enter Second Number : ");
      scanf("%d",&b);
      printf("Enter Third Number : ");
      scanf("%d",&c);
      _X=a+b+c/3.0;
      printf("Average of Three Numbers : %f",_X);
      return 0;
}
